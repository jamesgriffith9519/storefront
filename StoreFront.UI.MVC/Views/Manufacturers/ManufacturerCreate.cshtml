@model StoreFront.DATA.EF.Manufacturer

@using (Html.BeginForm("", "", FormMethod.Post, new { id = "ManufacturerCreateForm" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">

            <div class="col-md-10">
                @Html.EditorFor(model => model.Manu_Name, new { htmlAttributes = new { @class = "form-control", placeholder ="Manufacturer Name"} })
                @Html.ValidationMessageFor(model => model.Manu_Name, "", new { @class = "text-danger" })
            </div>




            <div class="col-md-10">
                @Html.EditorFor(model => model.Origin_Country, new { htmlAttributes = new { @class = "form-control", placeholder = "Origin Country" } })
                @Html.ValidationMessageFor(model => model.Origin_Country, "", new { @class = "text-danger" })
            </div>



            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>

        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
